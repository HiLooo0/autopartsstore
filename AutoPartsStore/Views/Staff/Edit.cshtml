@model AutoPartsStore.Models.Employee

@{
    ViewBag.Title = "Редагування працівника";
}

<h2>Редагування працівника</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.FullName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Position, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Position, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Position, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Department, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Department, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })
        </div>

        @* ===== ДОДАНО ПОЛЕ ДЛЯ РЕДАГУВАННЯ ДАТИ ===== *@
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.CreatedAt, new { @class = "control-label" })
            @Html.EditorFor(m => m.CreatedAt, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.CreatedAt, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Зберегти</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Скасувати</a>
        </div>
    </div>
}