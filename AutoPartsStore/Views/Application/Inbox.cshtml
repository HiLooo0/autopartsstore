@model IEnumerable<AutoPartsStore.Models.Application>

@{
    ViewBag.Title = "Вхідні заявки";
}

<h2>Вхідні заявки</h2>

@if (TempData["Info"] != null)
{
    <div class="alert alert-info">@TempData["Info"]</div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ПІБ</th>
            <th>Посада</th>
            <th>Відділ</th>
            <th>Коментар</th>
            <th>Дата подання</th> @* ===== НОВИЙ СТОВПЕЦЬ ===== *@
            <th class="text-center">Дії</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DesiredPosition)</td>
                    <td>@Html.DisplayFor(modelItem => item.Department)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comment)</td>

                    @* ===== ВІДОБРАЖЕННЯ ДАТИ ===== *@
                    <td>@item.SubmissionDate.ToString("dd.MM.yyyy HH:mm")</td>

                    <td class="text-center">
                        <div class="d-flex justify-content-center">
                            @using (Html.BeginForm("Approve", "Application", new { id = item.Id }, FormMethod.Post, new { @class = "me-1" }))
                            {
                                @Html.AntiForgeryToken() @* Додано для безпеки *@
                                <button type="submit" class="btn btn-success btn-sm">Прийняти</button>
                            }
                            @using (Html.BeginForm("Reject", "Application", new { id = item.Id }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken() @* Додано для безпеки *@
                                <button type="submit" class="btn btn-danger btn-sm">Відхилити</button>
                            }
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Нових заявок немає.</td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Inbox", new { page = ViewBag.CurrentPage - 1 })">Попередня</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">Попередня</span></li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Inbox", new { page = i })">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Inbox", new { page = ViewBag.CurrentPage + 1 })">Наступна</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">Наступна</span></li>
            }
        </ul>
    </nav>
}

<a href="@Url.Action("Index", "Staff")" class="btn btn-secondary mt-3">Назад до списку працівників</a>